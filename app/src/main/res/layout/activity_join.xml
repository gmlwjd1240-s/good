<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_6"
    tools:context=".JoinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/j_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/bmhanna_11yrs_ttf"
            android:gravity="center"
            android:text="회원가입"
            android:textSize="50sp" />

    </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="20sp"
                android:fontFamily="@font/bmhanna_11yrs_ttf"
                android:layout_marginLeft="30dp"
                />

            <EditText
                android:id="@+id/input_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="이름을 입력해주세요"
                android:fontFamily="@font/bmhanna_11yrs_ttf"
                />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/id"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/bmhanna_11yrs_ttf"
            android:text="ID"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/input_id"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="아이디를 입력해주세요"
            android:fontFamily="@font/bmhanna_11yrs_ttf" />

        <Button
            android:id="@+id/dcheck1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="중복확인"
            android:fontFamily="@font/bmhanna_11yrs_ttf"
            android:alpha="0.4"
            android:background="@drawable/button_background"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/pw"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="PW"
            android:textSize="20sp"
            android:fontFamily="@font/bmhanna_11yrs_ttf"
            android:layout_marginLeft="30dp"/>

        <EditText
            android:id="@+id/input_pw"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="비밀번호을 입력해주세요"
            android:fontFamily="@font/bmhanna_11yrs_ttf" />

        <Button
            android:id="@+id/dcheck2"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="중복확인"
            android:fontFamily="@font/bmhanna_11yrs_ttf"
            android:alpha="0.4"
            android:background="@drawable/button_background"

            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textSize="20sp"
            android:fontFamily="@font/bmhanna_11yrs_ttf"
            android:layout_marginLeft="25dp"
            />

        <EditText
            android:id="@+id/input_email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/bmhanna_11yrs_ttf"
            android:hint="이메일을 입력해주세요"
            android:inputType="textEmailAddress" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="핸드폰 번호"
            android:textSize="20sp"
            android:fontFamily="@font/bmhanna_11yrs_ttf"
            android:layout_marginLeft="25dp"
            />


        <EditText
            android:id="@+id/input_phone"
            android:inputType="phone"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/bmhanna_11yrs_ttf"
            android:hint="핸드폰 번호를 입력해주세요" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="회원가입에 동의합니다. (필수)"
            android:fontFamily="@font/bmhanna_11yrs_ttf"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/join_cancel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="취소"
            android:fontFamily="@font/bmhanna_11yrs_ttf"
            android:alpha="0.4"
            android:background="@drawable/button_background2"
            android:layout_marginLeft="80dp" />

        <Button
            android:id="@+id/join_ok"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="가입"
            android:fontFamily="@font/bmhanna_11yrs_ttf"
            android:alpha="0.4"
            android:background="@drawable/button_background2"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>


</LinearLayout>